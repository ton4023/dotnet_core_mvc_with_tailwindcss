@{
  ViewData["Title"] = "Home Page";
}
@model IEnumerable<webmvc.Models.CustomerEntity>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a class="text-purple-700" href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core </a> With <a class="text-blue-800" href='https://tailwindcss.com/'>Tailwind CSS</a>.</p>
</div>
<div id="Form">
    <div class="min-h-screen p-6 bg-gray-100 flex items-center justify-center">
  <div class="container max-w-screen-lg mx-auto">
    <div>
      <h2 class="font-semibold text-xl text-gray-600">Customer & End User Create</h2>


      <div class="bg-white rounded shadow-lg p-4 px-4 md:p-8 mb-6">
        <div class="grid gap-4 gap-y-2 text-sm grid-cols-1 lg:grid-cols-3">
          <div class="text-gray-600">
            <p class="font-medium text-lg">Information</p>

          </div>

          <div class="lg:col-span-2">
            <div class="grid gap-4 gap-y-2 text-sm grid-cols-1 md:grid-cols-6">

              <div class="md:col-span-3">
                <label for="name_th">Name(TH)</label>
                <input type="text" name="name_th" class="h-10 border mt-1 rounded px-4 w-full bg-gray-50" value="" />
              </div>
              <div class="md:col-span-3">
                <label for="name_en">Name(EN)</label>
                <input type="text" name="name_en" class="h-10 border mt-1 rounded px-4 w-full bg-gray-50" value="" />
              </div>

              <div class="md:col-span-3">
                <label for="phone">Phone</label>
                <input type="text" name="phone" class="h-10 border mt-1 rounded px-4 w-full bg-gray-50" value="" placeholder="999-999-9999" />
              </div>

              <div class="md:col-span-3">
                <label for="email">Email</label>
                <input type="text" name="email" class="h-10 border mt-1 rounded px-4 w-full bg-gray-50" value="" placeholder="email@domain.com" />
              </div>

              <div class="md:col-span-5">
                <div class="inline-flex items-center">
                  <input type="checkbox" name="billing_same" id="billing_same" class="form-checkbox" />
                  <label for="billing_same" class="ml-2"><a href="/Terms-and-Conditions-of-Use" class="text-blue-800">ข้อกำหนดและเงื่อนไขในการใช้งาน</a></label>
                </div>
              </div>

              <div class="md:col-span-5 text-right">
                <div class="inline-flex items-end">
                  <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Submit</button>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<div class="m-10">
<table class="table">
    <thead>
        <tr>
             <th class="w-10 p-4">
                @Html.DisplayNameFor(model => model.Code)
            </th>
             <th class="w-10 p-4">
                @Html.DisplayNameFor(model => model.NameTH)
            </th>
             <th class="w-10 p-4">
                @Html.DisplayNameFor(model => model.NameEN)
            </th>
              <th class="w-10 p-4">
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th class="w-10 p-4">
                @Html.DisplayNameFor(model => model.Email)
            </th>
             <th class="w-20 p-4">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
             <th class="w-20 p-4">
                @Html.DisplayNameFor(model => model.LastUpdateDate)
            </th>
            <th class="w-30 p-4">Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
      {
                          <tr>
                             <td class="w-10 p-4">
            @Html.DisplayFor(modelItem => item.Code)
                              </td>
                             <td class="w-10 p-4">
            @Html.DisplayFor(modelItem => item.NameTH)
                              </td>
                              <td class="w-10 p-4">
            @Html.DisplayFor(modelItem => item.NameEN)
                              </td>
                              <td class="w-10 p-4">
            @Html.DisplayFor(modelItem => item.Phone)
                              </td>
                                <td class="w-10 p-4">
            @Html.DisplayFor(modelItem => item.Email)
                              </td>
                               <td class="w-20 p-4">
            @Html.DisplayFor(modelItem => item.CreateDate)
                              </td>
                               <td class="w-20 p-4">
            @Html.DisplayFor(modelItem => item.LastUpdateDate)
                              </td>
                              <td class="w-30 p-4">
                                  <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                  <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                                  <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                              </td>
                          </tr>
      }
    </tbody>
</table>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script>
  axios.get('/api/Customer').then((res)=>console.log(res.data));
</script>

</div>